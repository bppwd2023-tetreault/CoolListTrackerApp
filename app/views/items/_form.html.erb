<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :deadline, style: "display: block" %>
    <%= form.datetime_field :deadline, class: "mb-3" %>
  </div>

  <div>
    <%= form.label :list_id, style: "display: block" %>
    <%= form.select :list_id, options_from_collection_for_select(List.all, 'id', 'name') %>
  </div>

  <div>
    <%= form.submit @button_text, class: "btn btn-success mt-3" %>
  </div>
<% end %>
