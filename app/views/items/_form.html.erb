<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :deadline, style: "display: block" %>
    <%= form.datetime_field :deadline, class: "mb-3" %>
  </div>

  <div>
    <%= form.label :priority_level, style: "display: block" %>
    <div>
      <%= form.radio_button :priority_level, 1 %>
      <%= form.label "1" %>
      <br>
      <%= form.radio_button :priority_level, 2 %>
      <%= form.label "2" %>
      <br>
      <%= form.radio_button :priority_level, 3 %>
      <%= form.label "3" %>
      <br>
      <%= form.radio_button :priority_level, 4 %>
      <%= form.label "4" %>
      <br>
      <%= form.radio_button :priority_level, 5 %>
      <%= form.label "5" %>
    </div>
  </div>

  <div>
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.label :list_id, style: "display: block" %>
    <%= form.select :list_id, options_from_collection_for_select(List.all, 'id', 'name') %>
  </div>

  <div>
    <%= form.submit @button_text, class: "btn btn-success mt-3" %>
  </div>
<% end %>
