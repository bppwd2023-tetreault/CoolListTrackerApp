<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :list_type, style: "display: block" %>
    <%= form.text_field :list_type, class: "mb-3" %>
  </div>

  <div>
    <%= form.label :group_id, style: "display: block" %>
    <%= form.select :group_id, options_from_collection_for_select(Group.all, 'id', 'name'), {:include_blank => true}, class: "mb-3" %>
  </div>
  
  <div>
    <%= form.submit @button_text, class: "btn btn-success" %>
  </div>
<% end %>
