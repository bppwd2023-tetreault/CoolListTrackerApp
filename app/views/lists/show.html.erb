<p style="color: green"><%= notice %></p>

<%= render @list %>
<p> <strong> Items: </strong> </p>
<ul>
<% @list.items.each do |it| %>
  <li> <%= link_to it.name, item_path(it) %> </li>
<% end %> 
</ul>
<div>
  <%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-success mb-3" %> |
  <%= link_to "Back to lists", lists_path, class: "btn btn-primary mb-3" %>

  <%= button_to "Destroy this list", @list, method: :delete, class: "btn btn-danger" %>
</div>

<div>
  <%= link_to "New item", new_item_path, class: "btn btn-success mt-5" %> 
</div>

<div class="mt-5">
  <button class="btn btn-info">Share this list with someone</button> 
  <p>Does nothing yet</p>
</div>
